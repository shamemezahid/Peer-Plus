<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/PostManImageImageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/PostManNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/PostManNameTextView"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="8dp"
        android:text="Shamim Bin Zahid"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PostManImageImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PostDateTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="clip_vertical|right|end"
        android:padding="8dp"
        android:text="2020, Jul, 09, 07:37"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/PostManNameTextView"
        app:layout_constraintStart_toStartOf="@+id/PostManImageImageView"
        app:layout_constraintTop_toBottomOf="@+id/PostManNameTextView" />

    <TextView
        android:id="@+id/PostBodyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Online Classes Start From Tomorrow!"
        android:textColor="#010101"
        app:layout_constraintEnd_toEndOf="@+id/PostDateTimeTextView"
        app:layout_constraintStart_toStartOf="@+id/PostDateTimeTextView"
        app:layout_constraintTop_toBottomOf="@+id/PostDateTimeTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>